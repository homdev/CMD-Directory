<div class="container mx-auto py-8">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold">Liste des Projets</h1>
    <%= link_to 'Nouveau Projet', new_project_path, class: 'bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600' %>
  </div>

  <div class="mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="project_list">
    <% @projects.each do |project| %>
      <%= render partial: "projects/project", locals: { project: project } %>
    <% end %>
  </div>
</div>
