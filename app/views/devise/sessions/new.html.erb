<div class="min-h-screen flex items-center justify-center bg-black">
  <!-- Glow Effect -->
  <div class="animated-border-box-glow absolute w-full max-w-sm z-0"></div>
  
  <!-- Formulaire de connexion -->
  <div class="relative w-full max-w-sm p-8 bg-white rounded-lg shadow-lg z-10 animated-border-box">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Connexion</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, class: "form-input mt-1 block w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input mt-1 block w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Connexion", class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-opacity-50 transition duration-300 ease-in-out" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .animated-border-box, .animated-border-box-glow {
    max-height: 400px;
    max-width: 300px;
    height: 100%;
    width: 100%;
    position: absolute;
    overflow: hidden;
    z-index: 0;
    border-radius: 10px;
  }

  .animated-border-box-glow {
    overflow: hidden;
    filter: blur(20px);
  }

  .animated-border-box:before, .animated-border-box-glow:before {
    content: '';
    z-index: -2;
    text-align: center;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(0deg);
    position: absolute;
    width: 99999px;
    height: 99999px;
    background-repeat: no-repeat;
    background-position: 0 0;
    background-image: conic-gradient(rgba(0,0,0,0), #32CD32, rgba(0,0,0,0) 25%);
    animation: rotate 4s linear infinite;
  }

  .animated-border-box:after {
    content: '';
    position: absolute;
    z-index: -1;
    left: 5px;
    top: 5px;
    width: calc(100% - 10px);
    height: calc(100% - 10px);
    background: #ffffff; /* Blanc ou toute autre couleur claire pour le formulaire */
    border-radius: 7px;
  }

  @keyframes rotate {
    100% {
      transform: translate(-50%, -50%) rotate(1turn);
    }
  }
</style>
