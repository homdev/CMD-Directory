<div class="container mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Liste des utilisateurs</h1>
    <%= link_to 'Ajouter un utilisateur', new_admin_user_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg shadow-md hover:bg-blue-500 transition duration-300" %>
  </div>

  <div class="overflow-x-auto bg-white shadow-md rounded-lg">
    <table class="min-w-full bg-white">
      <thead>
        <tr>
          <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
          <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prénom</th>
          <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
          <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
          <th class="py-3 px-6 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>

      <tbody class="bg-white divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-50">
            <td class="py-4 px-6 text-sm font-medium text-gray-900"><%= user.email %></td>
            <td class="py-4 px-6 text-sm font-medium text-gray-900"><%= user.name %></td>
            <td class="py-4 px-6 text-sm font-medium text-gray-900"><%= user.surname %></td>
            <td class="py-4 px-6 text-sm font-medium text-gray-900"><%= user.username %></td>
            <td class="py-4 px-6 text-sm font-medium text-gray-900"><%= user.role %></td>
            <td class="py-4 px-6 text-sm font-medium text-gray-900 text-center">
              <div class="flex space-x-4 justify-center">
                <%= link_to 'Voir', admin_user_path(user), class: "text-blue-600 hover:text-blue-900 transition duration-300" %>
                <%= link_to 'Éditer', edit_admin_user_path(user), class: "text-yellow-600 hover:text-yellow-900 transition duration-300" %>
                <%= link_to 'Supprimer', admin_user_path(user), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: "text-red-600 hover:text-red-900 transition duration-300" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
