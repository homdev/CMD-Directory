<div id="evaluation_<%= evaluation.id %>" class="bg-gray-100 p-4 rounded-lg mt-4">
  <p class="text-lg font-semibold">Évaluation par <%= evaluation.evaluator.name %></p>
  <p class="text-sm text-gray-500">Niveau de maturité : <%= evaluation.maturity_level %> / 5</p>
  <p class="mt-2 text-gray-700"><%= evaluation.feedback %></p>

  <div class="flex justify-end space-x-2">
    <% if policy(evaluation).update? %>
      <%= link_to 'Modifier', edit_evaluation_path(evaluation), class: 'text-blue-500 hover:text-blue-700' %>
    <% end %>

    <% if policy(evaluation).destroy? %>
      <%= link_to 'Supprimer', evaluation_path(evaluation), 
        method: :delete, 
        data: { turbo_confirm: "Êtes-vous sûr ?" }, 
        class: 'text-red-500 hover:text-red-700' %>
    <% end %>
  </div>
</div>
