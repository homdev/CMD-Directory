<div class="sidebar bg-white shadow-lg p-6 rounded-lg sticky top-4">
  <h2 class="text-2xl font-semibold mb-4">Filtrer</h2>
  <form>
    <div class="mb-4">
      <label for="role" class="block text-gray-700 font-medium">Rôle</label>
      <select id="role" name="role" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
        <option value="">Tous</option>
        <option value="admin">Admin</option>
        <option value="moderator">Modérateur</option>
        <option value="user">Utilisateur</option>
      </select>
    </div>
    <div class="mb-4">
      <label for="search" class="block text-gray-700 font-medium">Recherche</label>
      <input type="text" id="search" name="search" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" placeholder="Nom ou pseudo...">
    </div>
    <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Appliquer</button>
  </form>
</div>
